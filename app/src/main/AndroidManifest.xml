<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="rs.etf.nikola.muzej">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:label">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateExhibitActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rs.etf.nikola.muzej.MainActivity" />
        </activity>
        <activity android:name=".CreateShowpieceActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rs.etf.nikola.muzej.CreateExhibitActivity" />
        </activity>
        <activity android:name=".DemoExhibitActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rs.etf.nikola.muzej.MainActivity" />
        </activity>
        <activity android:name=".EditExhibitActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rs.etf.nikola.muzej.MainActivity" />
        </activity>
        <activity
            android:name="rs.etf.nikola.muzej.MyCaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />
        <service android:name="rs.etf.nikola.muzej.utility.DownloadService"/>
    </application>

</manifest>